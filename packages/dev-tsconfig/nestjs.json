{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Nest.js",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",

    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true
  }
}
