{
  "name": "turborepo-basic-npm",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:next-app": "turbo run dev --scope=next-app",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dependencies:upgrade": "yarn && yarn upgrade-interactive --latest && rm yarn.lock && npm install --force",
    "clean:repo": "del-cli junit.xml package-lock.json yarn.lock node_modules **/dist **/node_modules **/.next **/.turbo && npm install && npm run build && npm run test",
    "postinstall": "is-ci || yarn husky install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.5",
    "@changesets/cli": "2.23.2",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@playwright/test": "1.23.4",
    "@testing-library/dom": "8.16.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.6",
    "@types/lodash": "4.14.182",
    "@types/node": "18.0.6",
    "@types/prettier": "2.6.3",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@types/shell-quote": "1.7.1",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "@your-org/eslint-config-bases": "workspace:^",
    "del-cli": "5.0.0",
    "esbuild": "0.14.49",
    "esbuild-jest": "0.5.0",
    "eslint": "8.20.0",
    "eslint-config-next": "12.2.2",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.3.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.6.0",
    "eslint-plugin-jest-dom": "4.0.2",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-testing-library": "5.5.1",
    "husky": "8.0.1",
    "identity-obj-proxy": "3.0.0",
    "is-ci": "3.0.1",
    "jest": "28.1.3",
    "jest-watch-typeahead": "2.0.0",
    "lint-staged": "13.0.3",
    "msw": "0.44.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "prettier-plugin-organize-imports": "3.0.0",
    "rimraf": "3.0.2",
    "shell-quote": "1.7.3",
    "ts-jest": "28.0.7",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.0.0",
    "turbo": "1.3.4",
    "typescript": "4.7.4",
    "webpack": "5.73.0"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.2.2"
}
