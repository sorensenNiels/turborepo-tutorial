{
  "name": "turborepo-basic-yarn",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "dependencies:upgrade": "yarn && yarn upgrade-interactive --latest"
  },
  "devDependencies": {
    "@testing-library/dom": "8.11.3",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.3",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.4.1",
    "@types/lodash": "4.14.179",
    "@types/node": "17.0.21",
    "esbuild": "0.14.25",
    "esbuild-jest": "0.5.0",
    "husky": "7.0.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.5.1",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "12.3.5",
    "msw": "0.38.2",
    "prettier": "2.5.1",
    "prettier-plugin-organize-imports": "2.3.4",
    "ts-jest": "27.1.3",
    "ts-loader": "9.2.7",
    "ts-node": "10.6.0",
    "turbo": "1.1.5",
    "typescript": "4.6.2",
    "webpack": "5.70.0"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.17"
}
